@import "bootstrap";

//$background-color: #2c2b41;
$background-color: #252736;
//$background-color: darken(#4F8B60, 30%);
$text-color: #d9d9d9;
$dark-bg: darken($background-color, 10%);
$thead: darken($background-color, 5%);
$not-as-dark-bg: darken($background-color, 3%);
$boss-border: #f6c232;
$link-color: lighten($text-color, 50%);
$gold: #E0BF72;

body {
  color: $text-color;
  background-color: $background-color; 
}

.table-borderless tbody tr td,
.table-borderless tbody tr th,
.table-borderless thead tr th,
.table-borderless thead tr td,
.table-borderless tfoot tr th,
.table-borderless tfoot tr td {
    border: none !important;
}

.table-striped > tbody > tr:nth-child(even) > td, .table-striped > tbody > tr:nth-child(even) > th {
   background-color: $not-as-dark-bg;
}
.table-striped>tbody>tr:nth-child(odd)>td,
tr.found{
  background-color: $background-color;
}

thead th{
  background-color: $thead !important;
}

#main-background {
  background-image: url(<%= asset_path 'bdostats_background.png' %>);
  z-index: -1;
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  background-size: 100%;
  height: 690px;
  background-repeat: no-repeat;
}

#background-spacer {
  height: 690px;
}

p.card-text {
  color: darken($text-color, 10%);
  font-size: 16px !important;
}

h3.card-title {
  color: lighten($text-color, 10%);
}

.card-fa {
  font-size: 90px
}

#trophy-list {
  margin-top: 50px;
  margin-bottom: 50px;
}

.bdo-header{
  z-index: 10;
  padding: 30px;
  font-family: -apple-system, BlinkMacSystemFont, Segoe UI, Roboto, Droid Sans, Ubuntu, Cantarell, Fira Sans, Helvetica, Arial, sans-serif;
  color: #FFF;
  font-size: 6vw;
  align: center;
  -webkit-text-stroke: 1px black;
  margin-bottom: 0px;
}

#header-help-text{
  padding: 0px;
  margin: 0px;
  color: #FFF;
  font-size: 2vw;
  color: $text-color;
}

.boss-gear {
  border: solid 2px $boss-border;
  border-radius: 10px;
  height: 38px;
  width: 38px;
  background-color: #333
}

#trophy-list .card {
  border-radius: 10px;
  background-color: lighten($background-color, 10%);
  padding: 10px;
  height: 100%;
}

#trophy-list .gold {
  color: $gold;
}

.button_to {
  display: inline-block;
}

.login-links {
  color: lighten($text-color, 10%);
}

table td a {
  color: $link-color;
}

a, small a {
  color: $link-color;
}

a:hover, small a:hover, table td a:hover {
  color: darken($text-color, 30%);
}

.btn {
  color: #000;
}

.btn-primary, .btn-success, .btn-danger{
  color: $text-color;
}

.gear-screenshot{
  margin-top: 50px;
}

.text-center{
  text-align: center;
}

#boss-gear{
  padding: 20px;
  margin-top: 20px;
}

.modal {
  color: #000;
}

.pleb {
  opacity: 0.4;
  border: solid 2px gray;
}

#guild-stats {
  padding: 20px
}

.inline {
  display: inline-block;
}

.group {
  margin: 20px;
}

#main-link{
  font-size: 24px;
  color: $text-color;
}

.pull-left {
  float: left !important;
}

.pull-right {
  float: right !important;
}
.text-right {
  text-align: right;
}

ul li.active a {
  color: $text-color !important;
}

ul.nav-tabs li a{
  color: $text-color;
}

ul li a:hover {
  color: $dark-bg;
}

.no-border {
  border-bottom: none !important;
}

.darken {
  color: darken($text-color, 30%);
}

.gearscore {
  margin-top: 5px;
}

.tab-pane {
  padding: 20px;
}

//navbar

footer, .navbar {
  background-color: $dark-bg;
  padding: 15px;
}
.navbar-custom {
  background-color: $dark-bg;
  color:#ffffff;
  border-radius:0;
}

.navbar-custom .navbar-nav > li > a {
  color:#fff;
}
.navbar-custom .navbar-nav > .active > a, .navbar-nav > .active > a:hover, .navbar-nav > .active > a:focus {
  color: #ffffff;
  background-color:transparent;
}
.navbar-custom .navbar-brand {
  color:#eeeeee;
}

